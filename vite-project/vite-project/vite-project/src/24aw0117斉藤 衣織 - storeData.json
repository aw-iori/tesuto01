  { id: 2, name: "福島北店", address: "福島県福島市本町7-8-9", phoneNumber: "024-345-6789", region: "Tohoku" },
  { id: 3, name: "東京銀座ショップ", address: "東京都中央区銀座1-1-1", phoneNumber: "03-1234-5678", region: "Kanto" },
  { id: 4, name: "横浜みなとみらい店", address: "神奈川県横浜市西区みなとみらい2-2-2", phoneNumber: "045-987-6543", region: "Kanto" },
  { id: 5, name: "大宮メインストア", address: "埼玉県さいたま市大宮区桜木町3-4-5", phoneNumber: "048-765-4321", region: "Kanto" },
  { id: 6, name: "大阪梅田ショップ", address: "大阪府大阪市北区梅田1-1-1", phoneNumber: "06-1234-5678", region: "Kansai" },
  { id: 7, name: "京都四条店", address: "京都府京都市下京区四条通1-2-3", phoneNumber: "075-987-6543", region: "Kansai" },
  { id: 8, name: "神戸三宮ストア", address: "兵庫県神戸市中央区三宮町2-3-4", phoneNumber: "078-765-4321", region: "Kansai" },

 
];

function StoreProfile({ name, address, phoneNumber }) {
  return (
    <section className="profile">
      <h2>{name}</h2>
      <ul>
        <li>
          <b>住所:</b> {address}
          <b>電話番号:</b> {phoneNumber}
        </li>
      </ul>
    </section>
  );
}

function StoreGallery() {
  const [selectedRegion, setSelectedRegion] = useState("Tohoku");

  const handleChange = (event) => {
    setSelectedRegion(event.target.value);
  };

  const regions = ["Tohoku", "Kanto", "Kansai"];
  const filteredStores = stores.filter(
    (store) => store.region === selectedRegion
  );

  return (
    <>
      <h1>店舗一覧</h1>
      <div>
        <label htmlFor="region-select">地域を選択：</label>
        <select
          name="region-select"
          id="region-select"
          value={selectedRegion}
          onChange={handleChange}
        >
          {regions.map((region, index) => (
            <option key={index} value={region}>
              {region}
            </option>
          ))}
        </select>
      </div>
      <div>
        {filteredStores.map((store) => (
          <StoreProfile
            key={store.id}
            name={store.name}
            address={store.address}
            phoneNumber={store.phoneNumber}
          />
        ))}
      </div>
    </>
  );
}

export default StoreGallery;